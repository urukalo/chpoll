{% extends "app.html.twig" %}

{% block content %}
    <div class="container">
        <section class="signup_form row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-panel panel panel-default">
                    <div class="panel-body">

                        <ul id="poll">
                            {{poll}}

                            <hr/>
                            {{pollnew}}

                            <hr/>
                            <li>{{poll.name}}<br>
                                {{poll.question}}
                                <ul>
                                    {% for item in poll.answers %}

                                        <li>{{ item.text }}</li>
                                        {% endfor %}
                                </ul>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
