{% extends "app.html.twig" %}

{% block content %}
    <div class="container">
        <section class="signup_form row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-panel panel panel-default">
                    <div class="panel-body">
                        <form action="/admin/poll/{{poll.id}}" method="POST" role="form" id="subscriptionForm">
                            <fieldset>
                                <legend>Administrate Poll</legend>
                                <div class="col-md-12 form-group">
                                    <input class="form-control" placeholder="Name" name="name" type="text" value="{{poll.name}}">
                                </div>

                                <div class="col-md-12 form-group">
                                    <input class="form-control" placeholder="Question?" name="question" type="text" value="{{poll.question}}">
                                </div>
                                {%for ans in poll.answers%}
                                <div class="col-md-12 form-group">
                                    <input class="form-control" placeholder="Answer1" name="answer[][{{ans.id}}]" type="text" value="{{ans.text}}">
                                </div>
                                {%endfor%}
                               

                                <div class="col-md-12 ">
                                    <input id="active" name="active" type="checkbox" >
                                    <label for="remember">active</label>
                                </div>
                                <div class="col-md-12 ">
                                    <input id="public" name="public" type="checkbox" >
                                    <label for="remember">public</label>
                                </div>
                                <div class="col-md-12 ">
                                    <input id="public" name="archived" type="checkbox" >
                                    <label for="remember">archive</label>
                                </div>
                            </fieldset>

                            <button class="btn btn-primary mbtn" style="margin-left: 15px;">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
