{% extends "app.html.twig" %}

{% block content %}
    <div class="container">
        <section class="signup_form row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-panel panel panel-default">
                    <div class="panel-body">
                        <form action="/user/poll/{{poll.id}}" method="POST" role="form" id="subscriptionForm">
                            <fieldset>
                                <legend>Vote Poll</legend>
                                <ul id="poll">

                                    <li>{{poll.name}}<br>
                                        {{poll.question}}
                                        <ul>
                                            {% for item in poll.answers %}

                                                <li>
                                                    <div class="col-md-12 ">
                                                        <input id="public" name="answers" type="radio" value="{{item.id}}">
                                                        <label for="remember"> {{ item.text }}</label>
                                                    </div>

                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>
                                </ul>


                            </fieldset>

                            <button class="btn btn-primary mbtn" style="margin-left: 15px;">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
